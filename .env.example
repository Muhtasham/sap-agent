# SAP Endpoint Generator - Environment Variables
# Copy this file to .env and fill in your values

# ==============================================================================
# REQUIRED: Anthropic API Configuration
# ==============================================================================

# Your Anthropic API key for Claude Agent SDK
# Get one at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# ==============================================================================
# OPTIONAL: SAP Configuration
# ==============================================================================

# Default SAP version for generation (R3, ECC6, or S4HANA)
DEFAULT_SAP_VERSION=ECC6

# Default output directory for generated code
DEFAULT_OUTPUT_DIR=./output

# ==============================================================================
# OPTIONAL: Agent SDK Configuration
# ==============================================================================

# Maximum number of agent turns (default: 50)
MAX_TURNS=50

# Model to use (claude-sonnet-4-5, claude-opus-4, etc.)
CLAUDE_MODEL=claude-sonnet-4-5

# Maximum thinking tokens (default: 10000)
MAX_THINKING_TOKENS=10000

# ==============================================================================
# OPTIONAL: Development Settings
# ==============================================================================

# Enable debug logging
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ==============================================================================
# OPTIONAL: Testing Configuration
# ==============================================================================

# Test SAP system details (for integration tests)
TEST_SAP_HOST=
TEST_SAP_CLIENT=
TEST_SAP_USER=
TEST_SAP_PASSWORD=

# ==============================================================================
# OPTIONAL: Advanced Settings
# ==============================================================================

# Custom template directory (if not using built-in templates)
CUSTOM_TEMPLATE_DIR=

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Cache directory for parsed configs
CACHE_DIR=.cache

# ==============================================================================
# NOTES
# ==============================================================================

# 1. Never commit .env to git - it's in .gitignore
# 2. Keep your API keys secure
# 3. Use different .env files for different environments:
#    - .env.development
#    - .env.production
#    - .env.test
# 4. Reference environment variables in code:
#    - Node.js: process.env.ANTHROPIC_API_KEY
#    - TypeScript: import dotenv from 'dotenv'; dotenv.config();
